<title>My Band | FiTrack</title>
    <div id="page-content-wrapper" style="margin-left:3%;">
    <div class="container"> 
    <h1 style="border-bottom: 1px solid #A6AAA9; color: #000000;">My Band</h1>  
    
            <br><br>
    <%if current_user.bands.count == 1%>
        
        <div class="row" align="center" >
          <% current_user.bands.each do |band| %>
           <img class="img-circle" src="<%=band.band_type.path%>" width="210px" height="210px" style="border: 1px solid #A6AAA9;"><br><br>
          <h5 style="color: #858585;">You have your own </h5>
          <h4 style="border-bottom: 0px solid #A6AAA9;"><%=band.band_type.name%></h4>
          <h5 style="color: #858585;">with code</h5>

          <h4 style="border-bottom: 0px solid #A6AAA9;"><%=band.code%></h4>
                      <%= link_to 'Edit', edit_band_path(band), :class=>'btn btn-default btn-sm' %>
            <%= link_to 'Disassociate', band, method: :delete, data: { confirm: 'Are you sure?' }, :class=>'btn btn-danger btn-sm' %>
          
          <% end %>
        </div>
    <%else%>
        <center>
        <p class="text-muted">
            <h5 style="color: #858585;">Oops! You don't have any bands.</h5>
            <h5 style="color: #858585;">Please associate one to start your fitness journey.</h5>
            <br>
            <%= link_to 'New Band', new_band_path , :class =>"btn btn-primary btn-sm"%>
        </p>
      </center>
    <%end%>
    </div>
</div>