<head>
<title><%=@user.name%>'s Profile | FiTrack</title>
</head>
<div class="container">
  <h1 style="border-bottom: 1px solid #A6AAA9; color: #000000;"> Profile </h1>
  <center>
    <br>
     <div class="row">
        <%if @user.sex == 'Male'%>
          <img class="img-circle" src="/assets/male.jpg" width="210px" height="210px" style="border: 1px solid #A6AAA9;"><br><br>
        <%else%>
          <img class="img-circle" src="/assets/female.jpg" width="210px" height="210px" style="border: 1px solid #A6AAA9;"><br><br>
        <%end%>
     </div>
    </center>

  <div class ="row">
    <div class ="col-xs-6" align="right">
        <strong> Name: </strong>
    </div>
    <div class="col-xs-6">
      <%= @user.name%>
    </div>
  </div>
<br>
  <div class ="row">
    <div class ="col-xs-6" align="right">
        <strong> Last Name: </strong>
    </div>
    <div class="col-xs-6">
      <%= @user.last_name%>
    </div>
  </div>
  <br>
  <div class ="row">
    <div class ="col-xs-6" align="right">
        <strong> Password: </strong>
    </div>
    <div class="col-xs-6">
        <%= link_to "Change your password?", edit_user_registration_path , :class => "btn btn-default btn-xs"%>
    </div>
  </div>

  <br>
  <div class ="row">
    <div class ="col-xs-6" align="right">
        <strong> Gender: </strong>
    </div>
    <div class="col-xs-6">
      <%=@user.sex%>
    </div>
  </div>

  <br>
  <div class ="row">
    <div class ="col-xs-6" align="right">
        <strong> Birthdate: </strong>
    </div>
    <div class="col-xs-6">
      <%=@user.birthdate.to_formatted_s(:long)%>   
    </div>
  </div>
  <br>
  <div class ="row">
    <div class ="col-xs-6" align="right">
        <strong> Height: </strong>
    </div>
    <div class="col-xs-6">
        <%= @user.height%>
    </div>
  </div>

  <br>
  <div class ="row">
    <div class ="col-xs-6" align="right">
        <strong> Weight: </strong>
    </div>
    <div class="col-xs-6">
        <%= @user.weight%>
    </div>
  </div>
  <br>
  <center style ="margin-bottom: 30px;">
    <%= link_to "Edit", edit_user_registration_path , :class => "btn btn-default btn-sm"%>
     &nbsp;<%= link_to "Back", :back ,:class=>'btn-sm'%>
  </center>
</div>